{
  "name": "victron-venus-metrics",
  "version": "1.0.0",
  "description": "Metric framework for Victron VenusOS",
  "main": "index.js",
  "scripts": {
    "dev": "node live-server.js",
    "dev-compile": "npx webpack -w --mode=development",
    "dev-compile:mocked": "npx webpack -w --mode=development --mocked",
    "clean": "rm -rf dist",
    "compile": "npm run clean && npx webpack --mode=production",
    "test": "jest --config jestconfig.json",
    "test-radiator": "node ./test/displays/test-server.js",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "copy-webpack-plugin": "^4.5.3",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "live-server": "^1.2.0",
    "mqtt": "^2.18.3",
    "node-sass": "^4.9.4",
    "preact": "^8.3.1",
    "prettier": "^1.14.3",
    "regenerator-runtime": "^0.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node hooks/commit-msg.js $HUSKY_GIT_PARAMS"
    }
  }
}
