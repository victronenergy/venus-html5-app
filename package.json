    "concurrently": "^4.1.2",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "lint-staged": "^8.2.1",
    "mqtt": "^2.18.3",
    "node-sass": "^4.13.1",
    "postcss-loader": "^3.0.0",
    "prop-types": "^15.7.2",
